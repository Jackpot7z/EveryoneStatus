{
    "manifest_version": 3,
    "name": "EveryoneStatus",
    "version": "1.0",
    "description": "Make any greenscreen video display on any website you like!",
    "author": "dmarimon@gmail.com", 
    "icons": {
        "128": "EveryoneStatus128x128.png",
        "48": "EveryoneStatus48x48.png",
        "32": "EveryoneStatus32x32.png",
        "16": "EveryoneStatus16x16.png"
    },
    "permissions": [
        "storage",
        "<all_urls>",
        "file:///",
        "*://*/*",
        "activeTab",
        "tabs"


    ],
    "action": {
        "default_popup": "popup.js"
    }
}